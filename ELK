version: "3.9"

services:
  elasticsearch:
    image: docker.mtyn.ir/devops/elasticsearch:8.14.0
    environment:
      - node.name=elasticsearch
      - cluster.name=stage
      - discovery.type=single-node
      - network.host=0.0.0.0
      - network.publish_host=elasticsearch
      - http.port=9200
      - bootstrap.memory_lock=true
      - xpack.security.enabled=false
      - xpack.security.http.ssl.enabled=false
      - ES_JAVA_OPTS=-Xms4g -Xmx4g
    ulimits:
      memlock:
        soft: -1
        hard: -1
    volumes:
      - /mnt/elk/elasticsearch/data:/usr/share/elasticsearch/data
      - /mnt/elk/elasticsearch/backup:/usr/share/elasticsearch/backup
      - /etc/localtime:/etc/localtime:ro
      - /etc/timezone:/etc/timezone:ro
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.hostname == ch-st-n2]
      resources:
        limits:
          cpus: '4'
          memory: 6G
    networks:
      - chabok
    ports:
      - target: 9200
        published: 9200
        protocol: tcp
        mode: ingress

  kibana:
    image: docker.mtyn.ir/devops/kibana:8.14.0
    environment:
      - SERVER_NAME=kibana
      - SERVER_HOST=0.0.0.0
      - ELASTICSEARCH_HOSTS=http://elasticsearch:9200
      - ELASTICSEARCH_SSL_VERIFICATIONMODE=none
    depends_on:
      - elasticsearch
    networks:
      - chabok
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.hostname == ch-st-n2]
    ports:
      - target: 5601
        published: 5601
        protocol: tcp
        mode: ingress
networks:
  chabok:
    external: true
