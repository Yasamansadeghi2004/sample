services:
  nginx:
    image: nginx:1.28.0
    container_name: nginx
    security_opt:
      - no-new-privileges:true
    ports:
      - "80:80"
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf:ro
      - ./conf.d:/etc/nginx/conf.d:ro
      - ./html:/usr/share/nginx/html:ro
    networks:
      - chat
    restart: always

volumes:
  nginx_config:

networks:
  chat:
    driver: bridge
               
